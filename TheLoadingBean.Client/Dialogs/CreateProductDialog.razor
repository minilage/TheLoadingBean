@using MudBlazor
@using TheLoadingBean.Shared.Models

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-4">Skapa ny produkt</MudText>

        <MudTextField @bind-Value="_product.ProductNumber" Label="Produktnummer" Required="true" />
        <MudTextField @bind-Value="_product.Name" Label="Namn" Required="true" />
        <MudTextField @bind-Value="_product.Price" Label="Pris" InputType="InputType.Number" Required="true" />
        <MudTextField @bind-Value="_product.Category" Label="Kategori" Required="true" />
        <MudCheckBox T="bool" @bind-Checked="_product.IsAvailable" Label="Tillgänglig" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Save" Color="Color.Primary">Spara</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Avbryt</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    private Product _product = new();

    private void Save()
    {
        MudDialog.Close(DialogResult.Ok(_product));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
