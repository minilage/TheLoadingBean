@using MudBlazor
@using Microsoft.AspNetCore.Components.Authorization
@using TheLoadingBean.Client.Services
@using TheLoadingBean.Shared.DTOs
@inject IAuthService AuthService

<MudDrawer Elevation="4" Class="mud-theme-primary" Variant="DrawerVariant.Mini">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6" Class="pl-4 pt-2">The Loading Bean</MudText>
    </MudDrawerHeader>

    <MudNavMenu>
        <MudNavLink Href="" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">Home</MudNavLink>
        <MudNavLink Href="products" Icon="@Icons.Material.Filled.LocalCafe">Products</MudNavLink>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <MudNavLink Href="admin/products" Icon="@Icons.Material.Filled.AdminPanelSettings">Product Management</MudNavLink>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <MudNavLink Href="orders" Icon="@Icons.Material.Filled.ShoppingCart">My Orders</MudNavLink>
            </Authorized>
        </AuthorizeView>
    </MudNavMenu>
</MudDrawer>