@page "/"
@using TheLoadingBean.Shared.DTOs
@inject NavigationManager NavigationManager

<!-- Hero Sektion -->
<div class="hero-section">
    <img src="/images/index.png" alt="The Loading Bean Hero" class="hero-bg-image" />
    <div class="hero-overlay">
        <h1 class="hero-title">Welcome to The Loading Bean</h1>
        <p class="hero-subtitle">We blend coffee, code and cozy vibes for night owls and creators</p>
        <p class="hero-caption">Fuel your late-night sessions – one cup at a time.</p>
        <MudButton Variant="Variant.Filled" Class="hero-button" OnClick="@(() => NavigationManager.NavigateTo("/products"))">
            Explore Our Products
        </MudButton>
    </div>
</div>

<MudDivider Class="my-6" />

<!-- Produktsektion -->
<MudContainer MaxWidth="MaxWidth.False">
    <MudText Typo="Typo.h4" Class="popular-title">Popular Products</MudText>

    <MudGrid>
        @foreach (var product in SampleProducts.Take(3))
        {
            <MudItem xs="12" sm="6" md="4">
                <div class="product-card mb-4">
                    <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
                    <MudText Typo="Typo.h6">@product.Name</MudText>
                    <MudText Typo="Typo.body2" Class="mb-2">@product.Description</MudText>
                    <MudButton Variant="Variant.Outlined" Size="Size.Small">
                        Add to Cart
                    </MudButton>
                </div>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    private List<ProductDto> SampleProducts = new()
    {
        new() { Name = "Mana Brew", Description = "Magical coffee for night coders.", ImageUrl = "/images/manabrew.png" },
        new() { Name = "Nerd Roast", Description = "A dark roast with a hint of pixel.", ImageUrl = "/images/nerdroast.png" },
        new() { Name = "Pixel Mug", Description = "Retro coffee mug for the true geek.", ImageUrl = "/images/pixelmug.png" }
    };
}
